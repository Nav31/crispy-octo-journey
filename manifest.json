{
  "manifest_version": 2,

  "name": "Click me and I will explain",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "background": {
  	"scripts": ["event.js"],
  	"persistent": false
  	},

    "content_scripts": [
    {
    	"css": ["bootstrap.css", "style.css"],
      "matches" : ["http://*/*", "https://*/*"],
      "js": ["jquery-2.2.3.min.js", "content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "history"
  ],
  "web_accessible_resources" : [
    "modal.html"
  ]
}